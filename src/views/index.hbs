<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i>upload image
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
                        <label class="custom-file-label" for="inputGroupFile">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="title for the image">
            </div>
            <div class="form-group">
                <textarea name="description" rows="2" class="form-control" placeholder="description for the image"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i> upload image
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h3><i class="far fa-images"></i> Recent uploads</h3>
    </div>
    <div class="card-body">
        <div class="row">
        {{#each images}}
            <div class="col-md-4">
                <a href="/images/{{uniqueId}}">
                    <img src="/public/upload/{{filename}}" alt="" class="w-200 h-200 img-thumbnail">
                </a>
            </div>
            {{else}}
                <div class="text-light text-center p-5">
                    <h1 class="text-light">There are no Images <strong>yet</strong></h1>
                    <p>Upload your first image</p>
                    <span class="material-icons" style="font-size: 7rem;">
                    add_a_photo
                    </span>
                </div>
        {{/each}}

        </div>
    </div>
</div>
